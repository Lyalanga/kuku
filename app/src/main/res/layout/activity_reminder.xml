<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/background_light">

        <!-- Header with gradient background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_header"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karibu, Mkulima wa Kuku"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shamba la Kuku"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:alpha="0.9"/>

        </LinearLayout>

        <!-- Stats Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:baselineAligned="false">

            <!-- Upcoming Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#4285F4"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#4285F4"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inakuja"
                    android:textSize="16sp"
                    android:textColor="#666666"/>

            </LinearLayout>

            <!-- Overdue Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_warning"
                    android:tint="#EA4335"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#EA4335"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zimepita"
                    android:textSize="16sp"
                    android:textColor="#666666"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Recent Reminders Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="#666666"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/reminderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mikumbusho ya Chanjo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

            </LinearLayout>

            <!-- FMD Vaccination Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/reminder_card_background"
                android:padding="16dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kampeni ya Chanjo ya Kuku"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="inasubiriwa"
                            android:background="@drawable/pending_badge"
                            android:textColor="#B7791F"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="8dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chanjo ya Ugonjwa wa Kuku"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tarehe ya Mwisho: 2025-07-15"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kutoka: Dkt. Sarah Mtaalamu wa Kuku"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chanjo ya kila mwaka ya Kuku. Kuku wote wanapaswa kuchanjwa."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:background="#F8F9FA"
                        android:padding="12dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    android:tint="#34A853"
                    android:layout_gravity="top"
                    android:layout_marginStart="12dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- ListView for additional reminders -->
        <ListView
            android:id="@+id/reminderListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
